<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/textViewLeaveRemainingDescription"
android:stretchColumns="0,1"
xmlns:android="http://schemas.android.com/apk/res/android">

<TableRow>
    <LinearLayout
        android:id="@+id/left"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/tower_shape_droptarget" >

        <ImageView
            android:id="@+id/blueRing"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/blue_ring" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/middle"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:background="@drawable/tower_shape_droptarget" >

        <ImageView
            android:id="@+id/redRing"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/red_ring" />

    </LinearLayout>
</TableRow>

<TableRow>

    <LinearLayout
        android:id="@+id/right"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/tower_shape_droptarget" >

        <ImageView
            android:id="@+id/orangeRing"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/orange_ring" />
    </LinearLayout>
</TableRow>
</TableLayout>